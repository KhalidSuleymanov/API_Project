@using Course.UI.ViewModel
@model GroupViewModel
@{
    ViewData["Title"] = "Index";
    int dataOrder = 0;
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
        </div>
        <div class="col-md-8">
            <div class="row justify-content-between align-items-center">
                <h1>Groups</h1>
                <a class="btn btn-primary" asp-controller="group" asp-action="create">Create</a>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <tr>

                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Groups)
                    {
                        dataOrder++;
                        <tr>
                            <th scope="row">@dataOrder</th>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="edit" asp-controller="group" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="delete" asp-controller="group" asp-route-id="@item.Id" class="btn btn-danger delete-btn">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>