@using Course.UI.ViewModel
@model StudentCreateViewModel
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <h2>Students Create</h2>
        </div>
        <div class="col-md-8">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FullName">FullName</label>
                    <input class="form-control" asp-for="FullName">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GroupId">Group</label>
                    <select class="form-control" asp-for="GroupId" asp-items="new SelectList(ViewBag.Groups,nameof(GroupViewModelItem.Id),nameof(GroupViewModelItem.Name))">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Point">Point</label>
                    <input class="form-control" asp-for="Point">
                    <span class="text-danger" asp-validation-for="Point"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
